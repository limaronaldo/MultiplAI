# Server
PORT=3000
NODE_ENV=development

# GitHub
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=
# Ou usar Personal Access Token para MVP
GITHUB_TOKEN=

# LLM Providers
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OPENROUTER_API_KEY=
GOOGLE_AI_API_KEY=

# Default model (optional - defaults to claude-sonnet-4-5-20250929)
# Options: claude-opus-4-5-20251101, claude-sonnet-4-5-20250929, claude-haiku-4-5-20251015
#          gpt-4o, gpt-4o-mini, o1, o1-mini, o3-mini
DEFAULT_LLM_MODEL=

# Linear (optional but recommended for status updates)
# Get your API key at: Linear Settings → API → Personal API keys
LINEAR_API_KEY=

# Database (Neon)
DATABASE_URL=postgresql://user:pass@host/db?sslmode=require

# Configurações do sistema
MAX_ATTEMPTS=3
MAX_DIFF_LINES=300
ALLOWED_REPOS=owner/repo1,owner/repo2

# Post failure comments to GitHub issues (optional, default: false)
COMMENT_ON_FAILURE=false

# Logging
# Set to true to enable file logging (creates logs/ directory with daily log files)
LOG_TO_FILE=false
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

FLY_API_KEY=
