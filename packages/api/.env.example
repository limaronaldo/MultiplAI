# Server
PORT=3000
NODE_ENV=development

# GitHub
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=
# Ou usar Personal Access Token para MVP
GITHUB_TOKEN=

# LLM Providers
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OPENROUTER_API_KEY=
GOOGLE_AI_API_KEY=

# Default model (optional - defaults to claude-sonnet-4-5-20250929)
# Options: claude-opus-4-5-20251101, claude-sonnet-4-5-20250929, claude-haiku-4-5-20251001
#          gpt-4o, gpt-4o-mini, o1, o1-mini, o3-mini
#          gpt-5.1-codex-max (OpenAI Direct), google/gemini-3-pro-preview (OpenRouter)
DEFAULT_LLM_MODEL=

# Per-agent model overrides (optional - each falls back to DEFAULT_LLM_MODEL)
# Planner: Analyzes issues and creates implementation plans
PLANNER_MODEL=claude-sonnet-4-5-20250929
# Coder: Generates code as unified diffs (Opus is fastest based on A/B tests)
CODER_MODEL=claude-sonnet-4-5-20250929
# Fixer: Debugs and fixes failing code (Opus recommended for complex debugging)
FIXER_MODEL=claude-opus-4-5-20251101
# Reviewer: Reviews code and verifies DoD (Codex recommended for code focus)
REVIEWER_MODEL=gpt-5.1-codex-max

# Linear (optional but recommended for status updates)
# Get your API key at: Linear Settings → API → Personal API keys
LINEAR_API_KEY=

# Database (Neon)
DATABASE_URL=postgresql://user:pass@host/db?sslmode=require

# Configurações do sistema
MAX_ATTEMPTS=3
MAX_DIFF_LINES=300
ALLOWED_REPOS=owner/repo1,owner/repo2

# Post failure comments to GitHub issues (optional, default: false)
COMMENT_ON_FAILURE=false

# Validate diffs before committing (runs typecheck, default: true)
# Set to false to skip validation (faster but may commit broken code)
VALIDATE_DIFF=true

# Logging
# Set to true to enable file logging (creates logs/ directory with daily log files)
LOG_TO_FILE=false
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

FLY_API_KEY=

# Batch Job Configuration
# Label to filter GitHub issues for batch processing
BATCH_LABEL=batch-auto-dev
# Whether to group issues by milestone when processing batches
BATCH_BY_MILESTONE=false
