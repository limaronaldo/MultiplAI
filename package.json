{
  "name": "autodev",
  "version": "0.1.0",
  "private": true,
  "description": "Autonomous development system for small issues",
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@autodev/api",
    "dev:web": "turbo dev --filter=@autodev/web",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "db:migrate": "pnpm --filter @autodev/api db:migrate"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "react-markdown": "^10.1.0"
  }
}
